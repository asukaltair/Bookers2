<%= notice %>

<div class="container">
	<div class="row">
		<div class="col-xs-3">

			<%= render 'users/info', user: @user, book: @book %>

		</div>
		<div class="col-xs-9">
			<h2>Books</h2>

			<table>
				<thead>
					<tr>
						<th class="book-show-head"></th>
						<th class="book-show-head">Title</th>
						<th class="book-show-head">Opinion</th>
					</tr>
				</thead>
				<tbody>
					<% @user.books.each do |book| %>
						<tr>
							<td class="book-show"><%= attachment_image_tag book.user, :profile_image, size: "40x40", format: 'jpeg', fallback: 'no_image.jpg' %></td>
							<td class="book-show">
								<%= link_to book_path(book) do %>
									<%= book.title %>
								<% end %>
							</td>
							<td class="book-show"><%= book.body %></td>
						</tr>
					<% end %>
				</tbody>
			</table>
		</div>
	</div>
</div>