<%= notice %>

<div class="container">
	<div class="row">
		<div class="col-xs-3">

			<%= render 'users/info', users: @users, books: @books %>

		</div>
		<div class="col-xs-8">
			<h2>Books</h2>

			<table>
				<thead>
					<tr>
						<th></th>
						<th>Title</th>
						<th>Opinion</th>
					</tr>
				</thead>
				<tbody>
					<%= @user.books.each do |book| %>
						<tr>
							<td><%= attachment_image_tag book.user, :profile_image, :fill, 40, 40 , format: 'jpeg', fallback: 'no_image.jpg' %></td>
							<td>
								<%= link_to book_path(book) do %>
									<%= book.title %>
								<% end %>
							</td>
							<td><%= book.body %></td>
						</tr>
					<% end %>
				</tbody>
			</table>
		</div>
	</div>
</div>