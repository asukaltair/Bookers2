<div class="container">
	<div class="row">
		<div class="col-xs-3">

			<%= render 'users/info', user: @user, book: @book %>

		</div>
		<div class="col-xs-8">
			<h2>Users</h2>

			<table>
				<thead>
					<tr>
						<th>image</th>
						<th>name</th>
						<th></th>
					</tr>
				</thead>
				<tbody>
					<% @users.each do |user| %>
						<tr>
							<td><%= attachment_image_tag user, :profile_image, size: "40x40", format: 'jpeg', fallback: 'no_image.jpg' %></td>
							<td><%= user.name %></td>
							<td><%= link_to 'Show', user_path(user) %></td>
						</tr>
					<% end %>
				</tbody>
			</table>
		</div>
	</div>
</div>