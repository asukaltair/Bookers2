<h2>User info</h2>
<%= attachment_image_tag @user, :profile_image, :fill, 100, 100, format: 'jpeg', fallback: "no_image.jpg" %>
<div class="row name">
	<div class="col-xs-7">
		name
	</div>
	<div class="col-xs-5">
		<%= @user.name %>
	</div>
</div>
<div class="row introduction">
	<div class="col-xs-7">
		introduction
	</div>
	<div class="col-xs-5">
		<%= @user.introduction %>
	</div>
</div>
<div class="edit-user">
	<%= link_to edit_user_path(@user) do %>
		<i class="fas fa-wrench"></i>
	<% end %>
</div>

<h2>New book</h2>

	<%= form_for [ @user, @book ] do |f| %>

		<label>Title</label>
		<%= f.text_field :title %>

		<label>Opinion</label>
		<%= f.text_area :body %>

		<%= f.submit "Create Book" %>

	<% end %>