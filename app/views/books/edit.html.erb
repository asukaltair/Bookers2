<div class="book-error">
	<% if @book.errors.any? %>
		<div class="book-error-title"><%= pluralize(@book.errors.count, "error") %> prohibited this obj from being saved:</div>
		<ul>
			<% @book.errors.full_messages.each do |message| %>
				<li class="book-error-detail"><%= message %></li>
			<% end %>
		</ul>
	<% end %>
</div>

<div class="container">
	<div class="row">
		<div class="edit-book-page col-xs-offset-3 col-xs-6">

			<h2>Editing Book</h2>

			<%= form_for(@book) do |f| %>

				<label>Title</label>
				<%= f.text_field :title, class:"new-book-form" %>

				<label>Opinion</label>
				<%= f.text_area :body, class:"new-book-form" %>

				<%= f.submit "Update Book", class:"btn btn-primary new-book-submit" %>

			<% end %>

			<%= link_to 'Show', book_path(@book) %>
			|
			<%= link_to 'Back', books_path %>


		</div>
	</div>
</div>

