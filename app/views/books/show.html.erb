<%= notice %>

<div class="container">
	<div class="row">

		<div class="col-xs-3">

			<%= render 'users/info', user: @user, book: @newbook %>

		</div>

		<div class="col-xs-9">
			<h2>Book detail</h2>

			<table>
				<tbody>

					<tr>
						<td class="book-show">
							<%= attachment_image_tag @book.user, :profile_image, size: "100x100", format: 'jpeg', fallback: 'no_image.jpg' %> <br>
							<%= link_to user_path(@book.user) do %>
								<%= @book.user.name %>
							<% end %>
						</td>
						<td class="book-show">
							<%= link_to book_path(@book) do %>
								<%= @book.title %>
							<% end %>
						</td>
						<td class="book-show"><%= @book.body %></td>

						<% if @book.user.id == current_user.id %>

							<td class="book-show"><%= link_to 'Edit', edit_book_path(@book), class:"btn btn-success", style:"width: 100px" %></td>
							<td class="book-show"><%= link_to 'Destroy', book_path(@book), class:"btn btn-danger", style:"width: 100px", method: :delete, data: {confirm: "本当に消しますか？"} %></td>

						<% end %>

					</tr>

				</tbody>
			</table>
		</div>
	</div>
</div>